extends ../layout

block content
  h1= title
  p Voici la liste des utilisateurs :

  a(href='/users/add') Ajouter un utilisateur
  table(border=1)
    tr
      th Id
      th Pseudo
      th Prénom
      th Nom
      th Email
      th Action

    each user in users
      tr
        td #{user.rowid}
        td #{user.pseudo}
        td #{user.firstname}
        td #{user.lastname}
        td #{user.email}
        td
          a(href='/users/' + user.rowid) &nbsp;  Voir &nbsp; |
          a(href='/users/' + user.rowid + '/edit') &nbsp; Éditer &nbsp; |
          a(href='/users/' + user.rowid + '?_method=delete') &nbsp; Supprimer &nbsp;
