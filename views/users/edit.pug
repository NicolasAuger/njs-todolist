extends ../layout

block content
  h1= title
  br
  br
  form(
    method="post"
    action=action
  )
    label
      strong Pseudo
      input(name="pseudo" value=user.pseudo)

    label
      strong Pr√©nom
      input(name="firstname" value=user.firstname)

    label
      strong Nom
      input(name="lastname" value=user.lastname)

    label
      strong Email
      input(name="email" value=user.email)

    label
      strong Team
      select(name="team")
        option(value="none", selected=(!!user.team)) Aucune
        each team, i in teams
          option(value=team._id, selected=(user.team && user.team.toString() == team._id.toString())) Team : #{team.name}


    label
      input(type="submit" value="Modifier")
